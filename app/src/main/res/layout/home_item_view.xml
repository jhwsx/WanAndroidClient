<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardBackgroundColor="@android:color/white"
    android:layout_height="wrap_content">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/tv_home_item_view_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="标题文章标题文章标题"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>



        <TextView
            app:layout_constraintTop_toBottomOf="@+id/tv_home_item_view_title"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/tv_home_item_view_chapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="类别: "
            android:layout_marginTop="8dp"
            android:textColor="@android:color/darker_gray"
            android:textSize="16sp"/>

        <TextView
            app:layout_constraintTop_toBottomOf="@+id/tv_home_item_view_title"
            app:layout_constraintLeft_toRightOf="@+id/tv_home_item_view_chapter"
            android:id="@+id/tv_home_item_view_chapter_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="具体案例"
            android:layout_marginTop="8dp"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"/>

        <TextView
            app:layout_constraintTop_toBottomOf="@+id/tv_home_item_view_title"
            app:layout_constraintRight_toLeftOf="@+id/tv_home_item_view_nice_date"
            android:id="@+id/tv_home_item_view_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间: "
            android:layout_marginTop="8dp"
            android:textColor="@android:color/darker_gray"
            android:textSize="16sp"/>
        <TextView
            app:layout_constraintTop_toBottomOf="@+id/tv_home_item_view_title"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/tv_home_item_view_nice_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3小时前"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/darker_gray"
            android:textSize="16sp"/>

        <TextView
            app:layout_constraintTop_toBottomOf="@+id/tv_home_item_view_chapter"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/tv_home_item_view_author_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="作者: "
            android:layout_marginTop="8dp"
            android:textColor="@android:color/darker_gray"
            android:textSize="16sp"/>

        <TextView
            app:layout_constraintTop_toBottomOf="@+id/tv_home_item_view_chapter"
            app:layout_constraintLeft_toRightOf="@+id/tv_home_item_view_author_text"
            android:id="@+id/tv_home_item_view_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="志超"
            android:layout_marginTop="8dp"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"/>
        <ImageView
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_home_item_view_chapter"
            android:id="@+id/iv_home_item_view_collect"
            android:layout_width="wrap_content"
            app:srcCompat="@drawable/ic_main_collection"
            android:layout_height="wrap_content"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
