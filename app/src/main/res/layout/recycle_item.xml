<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/color_background"
    app:cardCornerRadius="@dimen/dp_0">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_8"
        android:paddingRight="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8">

        <TextView
            android:id="@+id/tv_home_item_view_chapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:text="@string/category"
            android:textColor="@color/color_73"
            android:textSize="@dimen/dp_14"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_home_item_view_chapter_name"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_8"
            android:singleLine="true"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/dp_14"
            app:layout_constraintLeft_toRightOf="@+id/tv_home_item_view_chapter"
            app:layout_constraintRight_toLeftOf="@+id/tv_home_item_view_date"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="具体案例具体案例具体案例具体案例具体案例具体案例"/>

        <TextView
            android:id="@+id/tv_home_item_view_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time"
            android:textColor="@color/color_73"
            android:textSize="@dimen/dp_14"
            app:layout_constraintRight_toLeftOf="@+id/tv_home_item_view_nice_date"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_home_item_view_nice_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/dp_14"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="3小时前"/>

        <TextView
            android:id="@+id/tv_home_item_view_title"
            android:layout_width="@dimen/dp_0"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:textColor="@color/color_3e"
            android:textSize="@dimen/dp_16"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_home_item_view_chapter"
            tools:text="标题文章标题文章标题"/>

        <TextView
            android:id="@+id/tv_home_item_view_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@drawable/shape_recycle_item_tag_bg"
            android:layout_marginLeft="@dimen/dp_8"
            android:textSize="@dimen/dp_14"
            android:visibility="gone"
            android:paddingLeft="@dimen/dp_4"
            android:paddingRight="@dimen/dp_4"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColor="@color/colorPrimary"
            app:layout_constraintTop_toBottomOf="@+id/tv_home_item_view_title"
            tools:text="项目"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/tv_home_item_view_author_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:text="@string/author"
            android:layout_marginLeft="@dimen/dp_8"
            android:textColor="@color/color_73"
            android:textSize="@dimen/dp_14"
            app:layout_constraintLeft_toRightOf="@+id/tv_home_item_view_tag"
            app:layout_constraintTop_toBottomOf="@+id/tv_home_item_view_title"/>

        <TextView
            android:id="@+id/tv_home_item_view_author"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_8"
            android:singleLine="true"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/dp_14"
            app:layout_constraintLeft_toRightOf="@+id/tv_home_item_view_author_text"
            app:layout_constraintRight_toLeftOf="@+id/tv_home_item_view_date"
            app:layout_constraintTop_toBottomOf="@+id/tv_home_item_view_title"
            tools:text="志超"/>

        <ImageView
            android:id="@+id/iv_home_item_view_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_home_item_view_title"
            tools:srcCompat="@drawable/ic_favorite_empty"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
