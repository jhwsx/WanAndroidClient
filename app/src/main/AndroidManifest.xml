<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.wan.android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <!-- 判断网络有无必须, X5WebView必须-->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <!--X5WebView必须-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <!--X5WebView必须-->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <!--X5WebView必须-->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <!--X5WebView必须-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <!--X5WebView必须-->
    <uses-permission android:name="android.permission.WRITE_SETTINGS"/>
    <!--X5WebView必须-->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
    <!--X5WebView必须-->
    <uses-permission android:name="android.permission.READ_SETTINGS"/>
    <!--X5WebView必须-->
    <uses-permission android:name="android.permission.GET_TASKS"/>
    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.splash.SplashActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.main.MainActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".ui.login.LoginActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="@string/login"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".ui.login.RegisterActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="@string/register"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".ui.content.ContentActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".ui.search.SearchActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".ui.tree.BranchActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".ui.collect.MyCollectionActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"/>
        <!--     在AndroidManifest.xml中增加内核首次加载时优化Service声明；
        该Service仅在TBS内核首次Dex加载时触发并执行dex2oat任务，任务完成后自动结束。  -->
        <service
            android:name="com.tencent.smtt.export.external.DexClassLoaderProviderService"
            android:label="dexopt"
            android:process=":dexopt"/>
        <service
            android:name=".ui.content.X5InitService"
            android:exported="false"/>
    </application>

</manifest>